{
  "extends": "tsconfig/react-library.json",
  "ts-node": {
    "types": ["node"],
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["configs/**/*", "src/**/*", "webpack.config.ts"],
  "exclude": ["**/*.spec.ts"]
}
