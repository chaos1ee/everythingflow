{
  "extends": "tsconfig/react-library.json",
  "include": [
    "./src",
    "tsup.config.ts"
  ],
  "exclude": [
    "locale",
    "lib"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": false,
    "declarationMap": true,
    "resolveJsonModule": true
  }
}
